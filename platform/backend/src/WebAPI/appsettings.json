{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Platform.Infrastructure.Audit.AuditLogBootstrapHostedService": "Debug",
      "Platform.Infrastructure.Audit": "Information"
    }
  },
  "ConnectionStrings": {
    "Platform": "Host=postgres;Port=5432;Database=platform;Username=platform;Password=platform"
  },
  "Jwt": {
    "Issuer": "platform",
    "Audience": "platform-client",
    "SigningKey": "change-this-dev-signing-key-minimum-length",
    "AccessTokenLifetimeMinutes": 15,
    "RefreshTokenLifetimeDays": 7,
    "ClockSkewSeconds": 0
  },
  "AuthCookies": {
    "RefreshTokenCookieName": "__Host-platform-rt",
    "Path": "/api/public/auth",
    "UseStrictSameSite": true
  }
}
